# Flask Configuration
FLASK_SECRET_KEY=change-this-to-random-secret-key
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Google Cloud Speech-to-Text
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-credentials.json
GOOGLE_CLOUD_PROJECT=your-project-id

# OpenAI (for Whisper API and GPT-4 consolidation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude (optional, for consolidation)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# LLM Consolidation Settings
CONSOLIDATION_LLM=openai  # Options: openai, anthropic
CONSOLIDATION_MODEL=gpt-4-turbo-preview  # or claude-3-opus-20240229
CONSOLIDATION_CONTEXT_WINDOW=5  # Number of previous sentences to include
CONSOLIDATION_MERGE_THRESHOLD=0.7  # Similarity threshold for merging

# Audio Processing
MAX_AUDIO_BUFFER_SIZE=10485760  # 10MB in bytes
CHUNK_DURATION_MS=1000  # Audio chunk duration in milliseconds
SAMPLE_RATE=16000  # Audio sample rate in Hz
AUDIO_CHANNELS=1  # Mono audio

# STT Engine Defaults
DEFAULT_STT_ENGINE=google  # Options: google, whisper
ENABLE_WORD_CONFIDENCE=true
ENABLE_AUTO_PUNCTUATION=true

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=10
AUTO_SAVE_TRANSCRIPTS=true

# Database
DATABASE_URL=sqlite:///data/transcriber.db

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/transcriber.log

# CORS (for API access)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
